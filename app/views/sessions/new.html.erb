<h3 align="center">Login</h3>

<%= form_for(:session, :html => {class: 'form-horizontal', role: 'form'}, url: login_path) do |f| %>
  <div class='form-group'>
    <div class='control-label col-sm-2'>
      <%= f.label :email %>
    </div>
    <div class='control-label col-sm-9'>
      <%= f.email_field :email, class: 'form-control', placerholder: 'Enter your email', autofocus: true %>
    </div>
  </div>
  <div class='form-group'>
    <div class='control-label col-sm-2'>
      <%= f.label :password %>
    </div>
    <div class='control-label col-sm-9'>
      <%= f.password_field :password, class: 'form-control', autocomplete: 'off' %>
    </div>
  </div>
  <div class='form-group'>
    <div class='col-sm-offset-2 col-sm-10'>
      <%= f.submit "Login", class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>
<div class='col-xs-4 col-xs-offset-4'>
  [ <%= link_to 'Cancel', root_path %> ]
</div>