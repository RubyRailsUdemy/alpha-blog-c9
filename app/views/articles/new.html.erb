<div id="wrapper">
  
  <div id="branding">
    <h1>
      Alpha Blog
    </h1>
  </div>
  
  <div id="navbar">
    <%= link_to 'Home', root_path %> <%= link_to 'About Us', aboutus_path %>
  </div>
  
  <div id="content">
    <h3>
      Create a new article
    </h3>
    <div id="maincolumn">
      <% if @article.errors.any? %>
      <h2> The following errors prevented the article from getting created.</h2>
      <ul>
        <% @article.errors.full_messages.each do |msg|%>
          <li><%= msg %></li>
        <% end %>
      </ul>
      <% end %>
      
      <%= form_for @article do |f| %>
        <p>
          <%= f.label :title %> <br />
          <%= f.text_field :title %>
        </p>
        <p>
          <%= f.label :description %> <br />
          <%= f.text_area :description %>
        </p>
        <p>
          <%= f.submit %>
        </p>
      <% end %>
    </div>
  </div>
  
</div>