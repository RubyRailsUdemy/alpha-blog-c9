<h3 class="sectionheader">Articles >> Edit >> Title: <%= @article.title %> </h3>
<div id="maincolumn">
  <% if @article.errors.any? %>
  <p class="error">Error: Fix the errors below before submitting.</p>
  <ul class="error">
    <% @article.errors.full_messages.each do |msg|%>
      <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
  
  <%= form_for @article do |f| %>
    <p>
      <%= f.label :title, class: 'form_label' %>  <br /> 
      <%= f.text_field :title, class: 'form_control' %>
    </p>
    <p>
      <%= f.label :description, class: 'form_label' %> <br /> 
      <%= f.text_area :description, class: 'form_control', rows: 20 %>
    </p>
    <p>
      <%= link_to "Back", article_path(@article), class: 'button' %> &nbsp; <%= f.submit 'Edit Post', :class => 'button' %>
    </p>
  <% end %>
</div>